<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/consonant"
        android:layout_width="158dp"
        android:layout_height="100dp"
        android:text="자음연습"
        app:layout_constraintEnd_toStartOf="@+id/vowel" />

    <Button
        android:id="@+id/vowel"
        android:layout_width="158dp"
        android:layout_height="100dp"
        android:text="모음연습"
        app:layout_constraintBottom_toTopOf="@+id/makeWord"
        tools:layout_editor_absoluteX="573dp" />

    <Button
        android:id="@+id/soundcard"
        android:layout_width="158dp"
        android:layout_height="100dp"
        android:text="한글 음운 듣기"
        app:layout_constraintEnd_toStartOf="@+id/makeWord"
        tools:layout_editor_absoluteY="311dp" />

    <Button
        android:id="@+id/makeWord"
        android:layout_width="158dp"
        android:layout_height="100dp"
        android:text="단어만들기"
        tools:layout_editor_absoluteX="573dp"
        tools:layout_editor_absoluteY="311dp" />

</androidx.constraintlayout.widget.ConstraintLayout>